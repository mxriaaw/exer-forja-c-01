#include <stdio.h>

int main() {
    char cidade[50];
    char estado[50];
    int anoNascimento;
    int idade;

    printf("Digite sua cidade: ");
    scanf("%49s", cidade);

    printf("Digite seu estado: ");
    scanf("%49s", estado);

    printf("Digite seu ano de nascimento: ");
    scanf("%d", &anoNascimento);

    // Calcula idade (considerando ano atual = 2025)
    idade = 2025 - anoNascimento;

    printf("\nVoce nasceu em %s, no estado %s, no ano de %d e tem %d anos.\n",
           cidade, estado, anoNascimento, idade);

    return 0;
}
